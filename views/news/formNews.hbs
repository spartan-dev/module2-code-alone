

<h1>Crear Post</h1>


{{!-- cuando utilizamos imagen(s) 
se agrega una nueva prop



--}}
<form 
{{!-- baseURL="http://localhost:3000" --}}
action="/news/addNews"
method="POST"
{{!-- enctype --}}
enctype="multipart/form-data"
class="col s12"
>
<div class="row">
        <div class="input-field col s6">
          <input name="content" placeholder="Que estas pensando?" id="news" type="text" class="validate">
          <label for="news">Que estas pensando? </label>
        </div>
</div>
<div class="row">
        <div class="input-field col s6">
          <input name="images" multiple placeholder="una foto" id="news" type="file" class="validate">
          
        </div>
</div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Postear
            <i class="material-icons right">send</i>
        </button>
</div>

</form>